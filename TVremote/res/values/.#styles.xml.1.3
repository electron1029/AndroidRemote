<resources>

    <style name="AppTheme" parent="android:Theme.Light" />
    <style name="textViewStyle" parent="@android:style/Widget.TextView">
		<item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
		<item name="android:layout_height">25dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:padding">0dp</item>

	</style>
   	<style name="buttonCustom" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/button</item>
    </style>
    <style name="buttonCustomPlay" parent="@style/buttonCustom">
        <item name="android:background">@drawable/play</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>
    <style name="buttonCustomStop" parent="@style/buttonCustomPlay">
        <item name="android:background">@drawable/stop</item>
    </style>
    <style name="buttonCustomRewindForward" parent="@style/buttonCustomPlay">
        <item name="android:background">@drawable/rewind_forward</item>
    </style>
    <style name="buttonCustomRewindBack" parent="@style/buttonCustomPlay">
        <item name="android:background">@drawable/rewind_back</item>
    </style>
    <style name="buttonCustomNum" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/button</item>
    </style>
        <style name="buttonCustomPower" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/button</item>
    </style>

</resources>